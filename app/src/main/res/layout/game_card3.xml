<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    app:cardBackgroundColor="#00FFFFFF"
    tools:targetApi="s">

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="186dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners_login"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imGame"
            android:layout_width="137dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:rotation="90"
            app:srcCompat="@drawable/no_photo" />

        <TextView
            android:id="@+id/labelTitulo"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners"
            android:paddingStart="5dp"
            android:text="@string/titulo"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelPrecio"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:paddingStart="5dp"
                android:text="Precio"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnBuy"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/principal"
                android:contentDescription="btnCompra"
                android:scaleType="fitCenter"
                android:src="@drawable/cart_plus_solid"
                app:iconPadding="1dp"
                app:iconSize="22dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>