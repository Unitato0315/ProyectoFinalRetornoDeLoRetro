<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:outlineProvider="none"
    app:cardBackgroundColor="#00FFFFFF"
    tools:targetApi="s">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corners_login"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lyModify"
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imGame"
                android:layout_width="91dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/no_photo" />

            <TextView
                android:id="@+id/labelTitulo"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corners"
                android:paddingStart="10dp"
                android:text="@string/titulo"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/extraColor"
            android:contentDescription="btnDelete"
            android:scaleType="fitCenter"
            android:src="@drawable/trash_solid"
            app:iconSize="22dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.cardview.widget.CardView>